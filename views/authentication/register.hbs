{{#if errorLength}}
<div class="alert alert-danger" role="alert">{{errorLength}}</div>
{{/if}}

{{#if errorLastname}}
<div class="alert alert-danger" role="alert">{{errorLastname}}</div>
{{/if}}

<div class="row justify-content-center pt-5">
  <div class="col-12 col-lg-8 col-xl-6">
    <form class="form-signin border rounded p-5 shadow" action="/register" method="post">

      <div class="h5 mb-4 font-weight-normal">Регистрация нового пользователя</div>

      <div class="form-row">
        <div class="form-group col-lg-4">
          <label for="lastName">Фамилия</label>
          <input name="last_name" type="text" class="form-control" id="lastName" value="">
        </div>
        <div class="form-group col-lg-4">
          <label for="firstName">Имя</label>
          <input name="first_name" type="text" class="form-control" id="firstName" value="">
        </div>
        <div class="form-group col-lg-4">
          <label for="patronymic">Отчество</label>
          <input name="patronymic" type="text" class="form-control" id="patronymic" value="">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="position">Должность</label>
          <select id="position" class="form-control" name="position">
            <option value="1">ассистент</option>
            <option value="2">преподаватель</option>
            <option value="3">старший преподаватель
            </option>
            <option value="4">доцент</option>
            <option value="5">профессор</option>
            <option value="6">заведующий кафедрой
            </option>
            <option value="7">декан факультета</option>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label for="academic_degree">Ученая степень</label>
          <select id="academic_degree" class="form-control" name="academic_degree">
            <option value="1">младший научный сотрудник</option>
            <option value="2">старший научный сотрудник</option>
            <option value="3">кандидат наук</option>
            <option value="4" selected>доктор наук</option>
            <option value="5">член-корреспондент</option>
            <option value="6">академик</option>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label for="academic_title">Ученое звание</label>
          <select id="academic_title" class="form-control" name="academic_title">
            <option value="1">доцент</option>
            <option value="2">профессор</option>
          </select>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="dep">Кафедра</label>
          <select id="dep" class="form-control" name="department">
            <option value="1">инфокоммуникационных
              технологий и систем связи</option>
            <option value="2">информатики и
              вычислительной техники</option>
            <option value="3">общенаучной подготовки
            </option>
            <option value="4">
              научно-исследовательской работы и инновационного развития</option>
          </select>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="inputEmail">Email</label>
          <input name="email" type="email" class="form-control" id="inputEmail" value="">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="password">Пароль</label>
          <input name="password" type="password" class="form-control" id="password" value="">
        </div>
      </div>

      <input type="hidden" name="_csrf" value="{{csrfToken}}">

      <div class="form-row">
        <div class="col-12 col-md-12"><button name="submit" type="submit"
            class="btn btn-success btn-block mt-4">Зарегистрироваться</button>
        </div>
      </div>
    </form>
  </div>
</div>